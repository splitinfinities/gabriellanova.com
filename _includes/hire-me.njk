{%- from "./macros/image.njk" import image -%}

<animate-presence>
  <midwest-card tag="a" href="/hire-me" 
  padding="tiny" small-size="250"
  class="overflow-hidden order-last h-full"
  >
    <section class="p-0 flush">
      {{ image("one", "about", "1600", "900", "h-full object-cover") }}
    </section>
    <footer class="flex sm:wrap gap-3 p-2">
      <div class="w-full flex flex-col gap-2 justify-start items-start">
        <h5 class="font-bona-nova m-0">Want to hire me?</h5>
        <p class="m-0 text-base text-gray-10 dm:text-gray-2">Let's collaborate.</p>
        <midwest-button type="link" icon="true" padding="small" class="m-0 mr-auto">
          <ion-icon slot="icon" name="share"></ion-icon>
          Hire me
        </midwest-button>
      </div>
    </footer>
  </midwest-card>
</animate-presence